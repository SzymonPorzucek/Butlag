<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ButLag-APP</title>
    <!-- @include styles-app.kit -->
</head>

<body data-mode="light">

    <header>
        <div class="topbar">
            <div class="wrapper container flex justify-between items-center">
                <div class="topbar__burger-btn ui-icon"></div>
                <a href="#" class="logo-box">
                    <h1 class="flex justify-center items-center text">
                        <span class="logo mr-2"></span>ButLag
                    </h1>
                </a>
                <div class="topbar__bell ui-icon"></div>
            </div>
        </div>
        <nav class="nav">
            <ul class="nav-mobile text">
                <li class="nav__item--home"><span class="nav__item home"></span>Home</li>
                <li class="nav__item--shopping-list"><span class="nav__item shopping-list"></span>Shopping List</li>
                <li class="nav__item--notes"><span class="nav__item notes"></span>Notes</li>
                <li class="nav__item--todo-list"><span class="nav__item todo-list"></span>To Do List</li>
                <li class="nav__item--profile"><span class="nav__item profile"></span>Your Profile</li>
                <li class="nav__item--settings"><span class="nav__item settings"></span>Settings</li>
            </ul>
            <div class="overlay"></div>
        </nav>
        <div class="notifications">


        </div>
    </header>

    <main>
        <section class="home-section hidden section" id="home">
            <p class="text">home</p>
        </section>



        <section class="shopping-list-section section flex" id="shopping-list">
            <div class="shopping-list-section__box">
                <h2 class="section-title">Create your shopping list</h2>
                <div class="shopping-list-item shopping-list-item__add-new">
                    <div class="flex justify-center items-center h-full flex-col">
                        <p class="shopping-list-item__title">ADD</p>
                        <div class="plus-circle"></div>
                    </div>
                    <div class="shopping-list-item__search-box">
                        <div class="ui-icons flex justify-between mx-10 mt-8">
                            <div class="ui-icon arrow-left"></div>
                            <div class="ui-icon save"></div>
                        </div>
                        <div class="mt-6 flex flex-col items-center">
                            <input type="text" placeholder="Search for products..." class="search-input">
                            <p class="search-results-error error-msg mt-2"></p>
                        </div>
                        <div class="search-results-box">
                        </div>

                        <div class="w-full flex justify-center my-4">
                            <p class="text">- chosen products -</p>
                        </div>

                        <div class="shopping-list-to-save-box">

                            <div class="product-to-save">
                                <div class="image-box">
                                    <img class="result-img" src="https://bilder.ngdata.no/4030/kmh/large.jpg"
                                        alt="Product Image">
                                </div>
                                <div class="result-info">
                                    <p class="result-info-name">Kiwi stykk Lorem ipsum dolor, sit</p>
                                    <div>
                                        <p class="result-info-store">Store: SPAR</p>
                                        <p class="result-info-price">10.9 ,-</p>
                                    </div>
                                </div>
                                <div class="delete-btn ui-icon"></div>
                            </div>

                            <div class="product-to-save">
                                <div class="image-box">
                                    <img class="result-img" src="https://bilder.ngdata.no/4030/kmh/large.jpg"
                                        alt="Product Image">
                                </div>
                                <div class="result-info">
                                    <p class="result-info-name">Kiwi stykk Lorem ipsum dolor, sit</p>
                                    <div>
                                        <p class="result-info-store">Store: SPAR</p>
                                        <p class="result-info-price">10.9 ,-</p>
                                    </div>
                                </div>
                                <div class="delete-btn ui-icon"></div>
                            </div>

                            <div class="product-to-save">
                                <div class="image-box">
                                    <img class="result-img" src="https://bilder.ngdata.no/4030/kmh/large.jpg"
                                        alt="Product Image">
                                </div>
                                <div class="result-info">
                                    <p class="result-info-name">Kiwi stykk Lorem ipsum dolor, sit</p>
                                    <div>
                                        <p class="result-info-store">Store: SPAR</p>
                                        <p class="result-info-price">10.9 ,-</p>
                                    </div>
                                </div>
                                <div class="delete-btn ui-icon"></div>
                            </div>


                        </div>

                        <div class="w-full flex justify-center my-4">
                            <button type="button" class="delete-all-btn btn">Delete all</button>
                        </div>
                    </div>

                </div>
            </div>
        </section>



        <section class="notes-section section hidden" id="notes">
            <p class="text">notes</p>
        </section>



        <section class="todo-list-section section hidden" id="todo-list">
            <p class="text">todo-list</p>
        </section>



        <section class="profile-section section hidden" id="profile">
            <p class="text">profile</p>
        </section>



        <section class="settings-section section hidden" id="settings">
            <p class="text">settings</p>
        </section>


    </main>

    <div class="nav__theme justify-center items-center hidden">
        <button class="light-theme ui-icon" role="button"></button>
        <button class="dark-theme current-theme ui-icon" role="button"></button>
    </div>


    <script src="./js/app/app.min.js"></script>
</body>

</html>